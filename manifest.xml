<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
  xsi:type="MailApp">
  <Id>d4a85b76-3e44-4c87-9517-f9a3e4e1c2d3</Id>
  <Version>1.0.0</Version>
  <ProviderName>AccountantAI Solutions</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Accountant Email Assistant"/>
  <Description DefaultValue="Email assistant for accountants using Claude AI"/>
  <IconUrl DefaultValue="https://raw.githubusercontent.com/grantweston/AccountingWebAppAndOutlookAddIn/614efbabe2d30ec20a534e5c564b32f39cb92712/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://raw.githubusercontent.com/grantweston/AccountingWebAppAndOutlookAddIn/614efbabe2d30ec20a534e5c564b32f39cb92712/icon-high.png"/>
  <SupportUrl DefaultValue="https://accounting-webapp-and-outlook-addin-opxcr3be1.vercel.app/help"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://accounting-webapp-and-outlook-addin-opxcr3be1.vercel.app/outlook"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>
</OfficeApp> 